<div class="modal fade" id="modifier" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <form class="form-horizontal" method="post" action="{{ path('user_edit') }}">
                {{ form_errors(form) }}
                <div class="modal-header">
                    <h3 align="center"> Modifier ses informations</h3>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        {{ form_label(form.adresse, "Adresse", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                        {{ form_errors(form.adresse) }}
                        <div class="col-md-6">
                            {{ form_widget(form.adresse, {'attr': {'class': 'form-control input-md'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.email, "E-mail ", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                        {{ form_errors(form.email) }}
                        <div class="col-md-6">
                            {{ form_widget(form.email, {'attr': {'class': 'form-control input-md'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.telephone, "Téléphone ", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                        {{ form_errors(form.telephone) }}
                        <div class="col-md-6">
                            {{ form_widget(form.telephone, {'attr': {'class': 'form-control input-md'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.site, "Site internet ", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                        {{ form_errors(form.site) }}
                        <div class="col-md-6">
                            {{ form_widget(form.site, {'attr': {'class': 'form-control input-md'}}) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <div class="modal-footer">
                            <a class="btn btn-default" data-dismiss="modal">Fermer</a>
                            <button type="submit" class="btn btn-md btn-primary" align="center" id="buttonformul">Valider&nbsp;
                                <span class="glyphicon glyphicon-thumbs-up"></span></button>
                        </div>
                    </div>
                </div>
                {{ form_rest(form) }}
            </form>
        </div>
    </div>
</div>

