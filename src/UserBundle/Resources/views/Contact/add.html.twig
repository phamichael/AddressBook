<div class="modal fade" id="ajouter" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <form class="form-horizontal" method="post" action="{{ path('contact_add') }}">
                {{ form_errors(form) }}
                <div class="modal-header">
                    <h3 align="center">Ajouter un contact</h3>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="user">Choix contact </label>
                        <div class="col-md-6">
                            <select id="select" name="user" class="form-control">

                                {% for user in users %}

                                    <option> {{ user.id }} </option>

                                {% endfor %}

                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <div class="modal-footer">
                            <a class="btn btn-default" data-dismiss="modal">Fermer</a>
                            <button type="submit" class="btn btn-md btn-primary" align="center" id="buttonformul">Valider&nbsp;
                                <span class="glyphicon glyphicon-thumbs-up"></span></button>
                        </div>
                    </div>
                </div>
                {{ form_rest(form) }}
            </form>
        </div>
    </div>
</div>
